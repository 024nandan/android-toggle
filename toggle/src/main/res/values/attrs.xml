<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable
        name="Toggle">

        <attr
            name="onText"
            format="string"/>

        <attr
            name="offText"
            format="string"/>

        <attr
            name="offColor"
            format="color"/>

        <attr
            name="onColor"
            format="color"/>

        <attr
            name="borderColor"
            format="color"/>

        <attr name="on"
            format="boolean"/>

        <attr name="textSize"
            format="integer"/>
        
        <attr name="android:enabled"/>
    </declare-styleable>
</resources>